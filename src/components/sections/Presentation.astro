import Github from "../icons/Github.astro";
---

<div>
  <div class="flex flex-row flex-wrap items-center gap-x-4">
    <img src="/foto-perfil.webp" alt="Foto de perfil" class="w-24 rounded-lg" />
    <h2 class="text-3xl w-2/3">
      Hola, soy Eric <span class="text-xl text-primary"
        >Desarrollador Web y Técnico de Sistemas</span
      >
    </h2>
  </div>
  <div class="mt-12">
    <p class="text-lg mt-2">
      <span class="text-primary">+3 años de experiencia.</span> especializado en
