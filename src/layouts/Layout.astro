---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource-variable/comfortaa";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfolio web de Eric GarcÃ­a" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preload" as="image" href="/foto-perfil.webp" />
    <meta property="og:image" content="/foto-perfil.webp" />
